---
import AboutCompany from "./AboutCompany.astro";
import FooterNav from "./FooterNav.astro";
import ContactUs from "./ContactUs.astro";
---

<footer>
  <div class="inner-container">
    <AboutCompany />
    <FooterNav />
    <ContactUs />
  </div>
</footer>

<style>
  footer {
    display: flex;
    justify-content: center;

    padding: 160px 90px 70px 90px ;

    background: center bottom no-repeat url("../../assets/beans.png");
    background-size: cover;
    background-color: var(--brown);
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
    background-blend-mode: overlay;
  }

  footer :global(.logo) {
    margin-bottom: var(--gap);
  }

  footer :global(.about-company) {
    width: 33%;
  }

  footer :global(.contact-us) {
    width: 28%;
  }

  footer :global(.footer-nav) {
    width: 24%;
  }

  .inner-container {
    gap: 60px;
  }
</style>
